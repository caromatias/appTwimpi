<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- The main content view -->

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="#EEEEEE" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/com_facebook_loginview_text_color" >

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight=".33"
                android:background="@null"
                android:src="@drawable/tab_uno_cl" />

            <ImageButton
                android:id="@+id/buttonCentral"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight=".33"
                android:background="@null"
                android:src="@drawable/tab_tres_or" />

            <ImageButton
                android:id="@+id/btn_groups"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight=".33"
                android:background="@null"
                android:src="@drawable/tab_dos_cl" />
        </LinearLayout>

        
        <ListView
            android:id="@+id/list_amigos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp" >
        </ListView>
        
		
    </RelativeLayout>
    <!-- The navigation drawer -->

    <ListView
        android:id="@+id/lista"
        android:layout_width="250dp"
        android:layout_height="fill_parent"
        android:layout_gravity="start"
        android:background="#424242"
        android:choiceMode="singleChoice"
        android:divider="#2E2E2E"
        android:dividerHeight="2dp"
        android:textColor="#424242" />

</android.support.v4.widget.DrawerLayout>